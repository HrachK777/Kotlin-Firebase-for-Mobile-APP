<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Shadow effect -->
        <shape android:shape="rectangle">
            <solid android:color="#55000000"/> <!-- Semi-transparent black for shadow -->
            <corners android:radius="12dp"/>   <!-- Rounded corners -->
        </shape>
    </item>

    <item android:top="2dp" android:left="2dp">
        <!-- Button background -->
        <shape android:shape="rectangle">
            <solid android:color="#FF6200EE"/> <!-- Button color (adjust as needed) -->
            <corners android:radius="12dp"/>   <!-- Rounded corners to match shadow -->
        </shape>
    </item>
</layer-list>
