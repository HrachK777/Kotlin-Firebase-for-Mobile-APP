<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEBEB">

    <!-- User Photo -->
    <ImageView
        android:id="@+id/user_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/user_photo___"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_default_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- User Name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/league_spartan_medium"
        android:text="Joana"
        android:textColor="#CB3086"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_photo"/>

    <!-- Job Name -->
    <TextView
        android:id="@+id/job_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/league_spartan_medium"
        android:text="Formadora"
        android:textColor="#25183E"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name"/>




    <!-- CardView received and given feedbacks -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_feedbacks"
        android:layout_width="366dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="4dp"
        app:cardCornerRadius="26dp"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Feedback Received Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icon_feedback_received"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Icon feedback received"
                    android:src="@drawable/icon_profile_feedback_received"/>

                <TextView
                    android:id="@+id/text_profile_feedback_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:fontFamily="@font/league_spartan_medium"
                    android:text="@string/feedbacks_recebidos_dashboard"
                    android:textColor="#25183E"
                    android:textSize="27sp" />
            </LinearLayout>

            <!-- Feedback Given Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="11dp">

                <ImageView
                    android:id="@+id/icon_feedback_given"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Icon feedback given"
                    android:src="@drawable/icon_profile_feedback_given"/>

                <TextView
                    android:id="@+id/text_profile_feedback_given"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:fontFamily="@font/league_spartan_medium"
                    android:text="@string/feedbacks_efetuados_dashboard"
                    android:textColor="#25183E"
                    android:textSize="27sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Average title -->
    <TextView
        android:id="@+id/average_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="180dp"
        android:fontFamily="@font/league_spartan_medium"
        android:text="@string/m_dia_pessoal_dashboard"
        android:textColor="#CB3086"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view_feedbacks"/>

    <!-- CardView personal average -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_average"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="4dp"
        app:cardCornerRadius="26dp"
        android:layout_marginTop="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Initiative Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/league_spartan_medium"
                    android:text="@string/iniciativa_dashboard"
                    android:textColor="#25183E"
                    android:layout_marginBottom="7dp"
                    android:textSize="27sp" />

                <ImageView
                    android:id="@+id/one_star_image"
                    android:layout_width="150dp"
                    android:layout_height="57dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="55dp"
                    android:contentDescription="Icon feedback given"
                    android:src="@drawable/one_stars_profile_card" />
            </LinearLayout>

            <!-- Collaboration Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                tools:ignore="ExtraText,UseCompoundDrawables">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/league_spartan_medium"
                    android:text="@string/colabora_o_dashboard"
                    android:textColor="#25183E"
                    android:layout_marginBottom="7dp"
                    android:textSize="27sp" />

                <ImageView
                    android:id="@+id/two_star_image"
                    android:layout_width="150dp"
                    android:layout_height="57dp"
                    android:layout_gravity="end"
                    android:contentDescription="Icon feedback given"
                    android:src="@drawable/two_stars_profile_card"
                    android:layout_marginLeft="15dp"/>/>
            </LinearLayout>

            <!-- Commitment Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/league_spartan_medium"
                    android:text="@string/compromisso_dashboard"
                    android:textColor="#25183E"
                    android:layout_marginBottom="7dp"

                    android:textSize="27sp" />

                <ImageView
                    android:id="@+id/three_star_image"
                    android:layout_width="150dp"
                    android:layout_height="57dp"
                    android:layout_gravity="end"
                    android:contentDescription="Icon feedback given"
                    android:src="@drawable/three_stars_profile_card"
                    android:layout_marginLeft="5dp"/>/>
            </LinearLayout>

            <!-- Communication Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/league_spartan_medium"
                    android:text="@string/comunica_o_dashboard"
                    android:textColor="#25183E"
                    android:textSize="27sp"
                    android:layout_marginBottom="7dp"/>

                <ImageView
                    android:id="@+id/four_star_image"
                    android:layout_width="150dp"
                    android:layout_height="57dp"
                    android:layout_gravity="end"
                    android:contentDescription="Icon feedback given"
                    android:src="@drawable/four_stars_profile_card"
                    android:layout_marginLeft="8dp"/>/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Container para o fragment_menu -->
    <FrameLayout
        android:id="@+id/fragment_menu_container_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
