<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_home_background_image">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/logoSmall"
        android:layout_width="88dp"
        android:layout_height="73dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/small_logo___"
        android:scaleType="centerInside"
        android:src="@drawable/logo_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_menu_user"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/menu_icon"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoSmall" />

    <!-- Footer with 5 icons using ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Feed Icon -->
        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:contentDescription="@string/home"
            android:onClick="onIconClick"
            android:src="@drawable/icon_feed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <!-- Historic Icon -->
        <ImageView
            android:id="@+id/icon_feed"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:contentDescription="@string/feed_"
            android:onClick="onIconClick"
            android:src="@drawable/icon_historic"
            app:layout_constraintStart_toEndOf="@id/icon_home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <!-- Add Icon -->
        <ImageView
            android:id="@+id/icon_add"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:contentDescription="@string/add_"
            android:onClick="onIconClick"
            android:src="@drawable/icon_add"
            app:layout_constraintStart_toEndOf="@id/icon_feed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <!-- Ranking Icon -->
        <ImageView
            android:id="@+id/icon_ranking"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:contentDescription="@string/ranking_"
            android:onClick="onIconClick"
            android:src="@drawable/icon_ranking"
            app:layout_constraintStart_toEndOf="@id/icon_add"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/icon_profile"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:contentDescription="@string/profile"
            android:onClick="onIconClick"
            android:src="@drawable/icon_profile"
            app:layout_constraintStart_toEndOf="@id/icon_ranking"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2"/>

        <ImageView
            android:id="@+id/icon_under_bar"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/icon_under_bar"
            android:src="@drawable/icon_under_bar"
            app:layout_constraintEnd_toEndOf="@id/icon_profile"
            app:layout_constraintStart_toStartOf="@id/icon_home"
            app:layout_constraintTop_toBottomOf="@id/footer"
            app:layout_constraintWidth_percent="0.2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
