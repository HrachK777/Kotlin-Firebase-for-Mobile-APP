<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded"
        android:padding="8dp">

    <TextView
        android:id="@+id/item_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/league_spartan_medium"
        android:text="@string/editar_perfil_"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="180dp"
        android:layout_height="3dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/item_edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/item_dashboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/league_spartan_medium"
        android:text="Dashboard"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/item_edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="180dp"
        android:layout_height="3dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/item_dashboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/item_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/league_spartan_medium"
        android:text="Logout"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/item_dashboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="180dp"
        android:layout_height="3dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/item_logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/item_delete_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/league_spartan_medium"
        android:text="Apagar conta"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/item_logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>


