<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="380dp"
        android:layout_height="110dp"
        android:layout_margin="12dp"
        android:background="@android:color/white"
        app:cardCornerRadius="80dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.45">

        <ImageView
            android:id="@+id/profile_image_given"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="profile photo user"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_default_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/feed_name_given"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/league_spartan_medium"
                android:text="João"
                android:layout_marginEnd="60dp"
                android:textColor="#CB3086"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/feed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/league_spartan_medium"
                android:text="deu feedback a"
                android:textColor="#25183E"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/feed_name_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/league_spartan_medium"
                android:text="Maria"
                android:layout_marginStart="60dp"
                android:textColor="#CB3086"
                android:textSize="22sp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/feed_day_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/league_spartan_medium"
            android:text="Hoje às 14h"
            android:textColor="#005A87"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/profile_image_received"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="275dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_default_image"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>