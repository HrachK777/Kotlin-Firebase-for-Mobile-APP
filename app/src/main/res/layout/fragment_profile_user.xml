<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEBEB">

        <!-- User Photo -->
        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/user_photo__"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_default_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/user_photo_"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Job Name -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/league_spartan_medium"
            android:text="@string/joana"
            android:textColor="#CB3086"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_photo" />

        <TextView
            android:id="@+id/job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/league_spartan_medium"
            android:text="@string/formadora"
            android:textColor="#25183E"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_name" />

        <!-- CardView received and given feedbacks -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_feedbacks"
            android:layout_width="366dp"
            android:layout_height="120dp"
            android:layout_marginTop="200dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="26dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Feedback Received Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_feedback_received"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/feedback_received_icon"
                        android:src="@drawable/icon_profile_feedback_received" />

                    <TextView
                        android:id="@+id/text_profile_feedback_received"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:fontFamily="@font/league_spartan_medium"
                        android:text="@string/feedbacks_recebidos"
                        android:textColor="#25183E"
                        android:textSize="27sp" />
                </LinearLayout>

                <!-- Feedback Given Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_feedback_given"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/feedback_given_icon"
                        android:src="@drawable/icon_profile_feedback_given" />

                    <TextView
                        android:id="@+id/text_profile_feedback_given"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:fontFamily="@font/league_spartan_medium"
                        android:text="@string/feedbacks_efetuados"
                        android:textColor="#25183E"
                        android:textSize="27sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Average title -->
        <TextView
            android:id="@+id/average_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/league_spartan_medium"
            android:text="@string/m_dia_pessoal"
            android:textColor="#CB3086"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view_feedbacks" />

        <!-- CardView personal average -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_average"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="26dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingBottom="20dp">

                <!-- Initiative Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="7dp"
                        android:fontFamily="@font/league_spartan_medium"
                        android:text="@string/iniciativa"
                        android:textColor="#25183E"
                        android:textSize="27sp" />

                    <ImageView
                        android:id="@+id/one_star_image"
                        android:layout_width="150dp"
                        android:layout_height="57dp"
                        android:layout_marginStart="60dp"
                        android:contentDescription="@string/stars_icon"
                        android:src="@drawable/one_stars_profile_card" />
                </LinearLayout>

                <!-- Collaboration Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    tools:ignore="ExtraText">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="7dp"
                        android:fontFamily="@font/league_spartan_medium"
                        android:text="@string/colabora_o"
                        android:textColor="#25183E"
                        android:textSize="27sp" />

                    <ImageView
                        android:id="@+id/two_star_image"
                        android:layout_width="150dp"
                        android:layout_height="57dp"
                        android:layout_marginStart="20dp"
                        android:contentDescription="@string/stars_icon_"
                        android:src="@drawable/two_stars_profile_card" />
                </LinearLayout>

                <!-- Commitment Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="7dp"
                        android:fontFamily="@font/league_spartan_medium"
                        android:text="@string/compromisso"
                        android:textColor="#25183E"
                        android:textSize="27sp" />

                    <ImageView
                        android:id="@+id/three_star_image"
                        android:layout_width="150dp"
                        android:layout_height="57dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="@string/stars_icon"
                        android:src="@drawable/three_stars_profile_card" />
                </LinearLayout>

                <!-- Capacity Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="7dp"
                        android:fontFamily="@font/league_spartan_medium"
                        android:text="@string/capacidade"
                        android:textColor="#25183E"
                        android:textSize="27sp" />

                    <ImageView
                        android:id="@+id/four_star_image"
                        android:layout_width="150dp"
                        android:layout_height="57dp"
                        android:layout_marginStart="30dp"
                        android:contentDescription="@string/stars_icon"
                        android:src="@drawable/four_stars_profile_card" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- FrameLayout for fragment_menu -->
        <FrameLayout
            android:id="@+id/fragment_menu_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>