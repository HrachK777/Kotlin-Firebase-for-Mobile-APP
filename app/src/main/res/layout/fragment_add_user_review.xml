<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    android:background="@android:color/transparent">

    <!-- Title section at the top -->
    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Static part of the title -->
        <TextView
            android:id="@+id/title_avaliar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/league_spartan_medium"
            android:text="Avaliar"
            android:textColor="#25183E"
            android:textSize="30sp"/>

        <!-- Dynamic username part of the title -->
        <TextView
            android:id="@+id/title_usertoreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/league_spartan_medium"
            android:textColor="#CB3086"
            android:textSize="30sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/rating_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/league_spartan_medium"
                    android:text="@string/iniciativa__"
                    android:textColor="#005A87"
                    android:textSize="30sp" />

                <RatingBar
                    android:id="@+id/rating_iniciativa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:progressTint="@color/yellow_star"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:stepSize="1.0" />

                <!-- Campo 2: Conhecimento -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/league_spartan_medium"
                    android:text="@string/conhecimento_"
                    android:textColor="#005A87"
                    android:textSize="30sp" />

                <RatingBar
                    android:id="@+id/rating_conhecimento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:progressTint="@color/yellow_star"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:stepSize="1.0" />

                <!-- Campo 3: Colaboração -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/league_spartan_medium"
                    android:text="Colaboração"
                    android:textColor="#005A87"
                    android:textSize="30sp" />

                <RatingBar
                    android:id="@+id/rating_colaboracao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:progressTint="@color/yellow_star"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:stepSize="1.0" />

                <!-- Campo 4: Responsabilidade -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/league_spartan_medium"
                    android:text="@string/responsabilidade_"
                    android:textColor="#005A87"
                    android:textSize="30sp" />

                <RatingBar
                    android:id="@+id/rating_responsabilidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:progressTint="@color/yellow_star"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:stepSize="1.0" />
            </LinearLayout>

            <EditText
                android:id="@+id/comment_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/adicionar_coment_rio"
                android:layout_marginTop="60dp"
                android:padding="8dp"
                android:inputType="textMultiLine"
                android:background="@drawable/edit_text_border"
                android:minHeight="120dp"
                android:gravity="top|start"/>

            <!-- Botão de Submissão -->
            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_with_shadow"
                android:fontFamily="@font/league_spartan_medium"
                android:text="@string/submeter_"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="22sp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
