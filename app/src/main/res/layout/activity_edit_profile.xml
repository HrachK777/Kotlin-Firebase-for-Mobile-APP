<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/splashScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_profile_backgroud">

        <!-- icon back -->
        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="88dp"
            android:layout_height="73dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/icon_back"
            android:scaleType="centerInside"
            android:src="@drawable/icon_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/logoSmall"
            android:layout_width="88dp"
            android:layout_height="73dp"
            android:contentDescription="@string/small_logo"
            android:scaleType="centerInside"
            android:src="@drawable/logo_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <FrameLayout
            android:id="@+id/photo_frame"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoSmall">

            <!-- CircleImageView for profile image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/user_photo"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_default_image" />

            <ImageView
                android:id="@+id/icon_camera"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="6dp"
                android:contentDescription="@string/icon_camera"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_camera" />
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/titleEditProfile"
            android:layout_width="253dp"
            android:layout_height="57dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/league_spartan_medium"
            android:text="@string/editar_perfil_1"
            android:textColor="#CC0676"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.246"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photo_frame" />

        <!-- Job Label -->
        <TextView
            android:id="@+id/jobLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/league_spartan_medium"
            android:text="@string/cargo_"
            android:textColor="#80999999"
            android:textSize="21sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleEditProfile" />

        <!-- Job Input Field -->
        <EditText
            android:id="@+id/jobInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_input_background"
            android:fontFamily="@font/league_spartan_medium"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColorHint="#80999999"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jobLabel" />

        <Button
            android:id="@+id/editJobButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/league_spartan_medium"
            android:text="@string/editar_"
            android:textAllCaps="false"
            android:textColor="#CB3086"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jobInput" />

        <!-- Password Label -->
        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/league_spartan_medium"
            android:text="@string/password__"
            android:textColor="#80999999"
            android:textSize="21sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editJobButton" />

        <!-- Password Input Field -->
        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_input_background"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColorHint="#80999999"
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passwordLabel" />

        <!-- New Password Label -->
        <TextView
            android:id="@+id/newpasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/league_spartan_medium"
            android:text="@string/nova_password"
            android:textColor="#80999999"
            android:textSize="21sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passwordInput" />

        <!-- New Password Input Field -->
        <EditText
            android:id="@+id/newPasswordInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_input_background"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColorHint="#80999999"
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newpasswordLabel" />

        <!-- New Password Confirmation Label -->
        <TextView
            android:id="@+id/newPasswordConfirmationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/league_spartan_medium"
            android:text="Confirmar password"
            android:textColor="#80999999"
            android:textSize="21sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newPasswordInput" />

        <!-- New Password Confirmation Input Field -->
        <EditText
            android:id="@+id/newPasswordConfirmationInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_input_background"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColorHint="#80999999"
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newPasswordConfirmationLabel" />

        <!-- Save Changes Button -->
        <Button
            android:id="@+id/saveEditProfileButton"
            android:layout_width="344dp"
            android:layout_height="48dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="150dp"
            android:background="@drawable/button_with_shadow"
            android:fontFamily="@font/league_spartan_medium"
            android:text="@string/salvar_altera_es_"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textColorLink="#5E48ED53"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.582"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newPasswordConfirmationInput"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
