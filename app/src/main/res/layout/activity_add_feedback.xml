<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_profile_user_admin">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/logoSmall"
        android:layout_width="88dp"
        android:layout_height="73dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/small_logo__"
        android:scaleType="centerInside"
        android:src="@drawable/logo_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/addFeedback"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/small_logo__"
        android:scaleType="centerInside"
        android:src="@drawable/add_feedback_new_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoSmall" />

    <!-- Rating Section -->
    <LinearLayout
        android:id="@+id/rating_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/addFeedback"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Field 1: Iniciativa -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciativa"
            android:fontFamily="@font/league_spartan_medium"
            android:textColor="#CB3086"
            android:textSize="30sp"/>

        <RatingBar
            android:id="@+id/rating_iniciativa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="@color/yellow_star"
            android:stepSize="1.0" />


        <!-- Field 2: Conhecimento -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conhecimento"
            android:fontFamily="@font/league_spartan_medium"
            android:textColor="#CB3086"
            android:textSize="30sp"
            android:layout_marginTop="20dp"/>
        <RatingBar
            android:id="@+id/rating_conhecimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:progressTint="@color/yellow_star"/>

        <!-- Field 3: Colaboração -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colaboração"
            android:fontFamily="@font/league_spartan_medium"
            android:textColor="#CB3086"
            android:textSize="30sp"
            android:layout_marginTop="20dp"/>
        <RatingBar
            android:id="@+id/rating_colaboracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:progressTint="@color/yellow_star"/>

        <!-- Field 4: Responsabilidade -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comunica_o_"
            android:fontFamily="@font/league_spartan_medium"
            android:textColor="#CB3086"
            android:textSize="30sp"
            android:layout_marginTop="20dp"/>
        <RatingBar
            android:id="@+id/rating_responsabilidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:progressTint="@color/yellow_star"/>
    </LinearLayout>

    <!-- Footer with 5 icons -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="-5dp"
        android:paddingEnd="-5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Feed Icon -->
        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:contentDescription="Home"
            android:onClick="onIconClick"
            android:src="@drawable/icon_feed" />

        <!-- Historic Icon -->
        <ImageView
            android:id="@+id/icon_feed"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:contentDescription="Feed"
            android:onClick="onIconClick"
            android:src="@drawable/icon_historic" />

        <!-- Add Icon -->
        <ImageView
            android:id="@+id/icon_add"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="Add"
            android:onClick="onIconClick"
            android:src="@drawable/icon_add" />

        <!-- Ranking Icon -->
        <ImageView
            android:id="@+id/icon_ranking"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:contentDescription="Ranking"
            android:onClick="onIconClick"
            android:src="@drawable/icon_ranking" />

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/icon_profile"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:contentDescription="Profile"
            android:onClick="onIconClick"
            android:src="@drawable/icon_profile"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>